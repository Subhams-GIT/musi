{
   "compilerOptions": {
    "module": "es2022",                // or "NodeNext"
    "moduleResolution": "node",   // required for ESM-style resolution
    "target": "ES2020",               // or higher
    "verbatimModuleSyntax": true,     // enables strict ESM checking
    "outDir": "dist",                 
    "rootDir": "src",                 
    "esModuleInterop": true,
    "strict": true
  }
}
