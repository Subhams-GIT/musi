{
   "compilerOptions": {
    "module": "commonjs",                // or "NodeNext"
    "moduleResolution": "node",   // required for ESM-style resolution
    "target": "ES2020",               // or higher
    "verbatimModuleSyntax": false,     // enables strict ESM checking
    "outDir": "dist",                 
    "rootDir": "src",                 
    "esModuleInterop": true,
    "strict": true
  }
}
